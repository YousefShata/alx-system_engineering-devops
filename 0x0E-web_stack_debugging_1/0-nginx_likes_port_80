#!/usr/bin/env bash
#enable listining to site 80
sites="/etc/nginx/sites-enabled"

sed -i '/server {/ a \        listen 80 default_server;' "$sites"/*
sed -i '/server {/ a \        listen [::]:80 default_server;' "$sites"/*
sed -i '/server {/ a \        root /var/www/html;' "$sites"/*
sed -i '/server {/ a \        index.html index.htm index.nginx-debian.html;;' "$sites"/*
sudo service nginx restart
echo "done"
